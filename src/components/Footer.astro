import { queryFetch } from "@utils/queryFetch";
const { copyright,copyrightUrl, socialLink } = await queryFetch(`{
  siteConfig{
    data{
      attributes{
        global
      }
    }
  }
}`).then((result) => result.data.siteConfig.data.attributes.global.brand);
