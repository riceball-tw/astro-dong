---
import Card from "@components/Card/Card.astro";

---

  <div data-search-modal class="searchModal--disable fixed top-0 left-0 w-full h-full justify-center items-center filter backdrop-blur-xl ">
    <form data-search-form class="dark:bg-primary-50 text-primary-800 rounded-lg overflow-hidden mx-4 dark:text-primary-100">
      <Card class="flex gap-2 flex-col">
        <input autocomplete="off" class="w-full text-xl md:text-3xl py-4 outline-none bg-transparent" data-search-input name="searchInput" type="text" placeholder="請輸入要查閱的文章……">
        <ul data-search-list>
        </ul>

        <hr class="mb-4 text-primary-300 dark:text-primary-700">
        <p class="prose dark:prose-invert">
          搜尋功能只有在使用時伺服器才會啟動，冷啟動需要些許時間，推薦可以先到以下分類看看：
        </p>
        
        <div class="flex justify-around">
          <a class="text-center text-2xl py-16 " href="/post/categories">
            <svg fill="currentColor" class="mb-4" xmlns="http://www.w3.org/2000/svg" height="48" width="48"><path d="m13.05 21.7 11-17.7 11 17.7ZM35.3 44q-3.7 0-6.2-2.5t-2.5-6.2q0-3.7 2.5-6.2t6.2-2.5q3.7 0 6.2 2.5t2.5 6.2q0 3.7-2.5 6.2T35.3 44ZM6 42.75v-15.2h15.2v15.2ZM35.3 41q2.4 0 4.05-1.65T41 35.3q0-2.4-1.65-4.05T35.3 29.6q-2.4 0-4.05 1.65T29.6 35.3q0 2.4 1.65 4.05T35.3 41ZM9 39.75h9.2v-9.2H9Zm9.45-21.05h11.2l-5.6-9.05Zm5.6 0ZM18.2 30.55Zm17.1 4.75Z"/></svg>
            分類
          </a>

          <a class="text-center text-2xl py-16" href="/post/tags">
            <svg fill="currentColor" class="mb-4" xmlns="http://www.w3.org/2000/svg" height="48" width="48"><path d="M27.95 43.15q-.9.9-2.175.9t-2.175-.9L4.85 24.4q-.5-.5-.675-1.05Q4 22.8 4 22.2V7q0-1.3.85-2.15Q5.7 4 7 4h15.2q.6 0 1.2.175t1.1.675L43.15 23.5q.95.95.95 2.225 0 1.275-.95 2.225ZM25.9 41.1l15.2-15.2L22.2 7H7v15.2ZM12.25 14.8q1.05 0 1.825-.775.775-.775.775-1.825 0-1.05-.775-1.825Q13.3 9.6 12.25 9.6q-1.05 0-1.825.775-.775.775-.775 1.825 0 1.05.775 1.825.775.775 1.825.775ZM7 7Z"/></svg>
            標籤
          </a>
        </div>

      </Card>
    </form>
  </div>

<style>
.searchModal--disable {
  display: none;
}
.searchModal--enable {
  display: flex;
}
</style>