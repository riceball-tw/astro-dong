---
const { page } = Astro.props;
---

<ul>
  <li>
    {
      page.url.prev && (
        <a
          href={page.url.prev}
          class="py-2 px-3 leading-tight text-primary-500 bg-white rounded-r-lg border border-primary-300 hover:bg-primary-100 hover:text-primary-700 dark:bg-primary-800 dark:border-primary-700 dark:text-primary-400 dark:hover:bg-primary-700 dark:hover:text-white"
        >
          prev
        </a>
      )
    }
  </li>
  <li>
    {
      page.url.next && (
        <a
          href={page.url.next}
          class="py-2 px-3 leading-tight text-primary-500 bg-white rounded-r-lg border border-primary-300 hover:bg-primary-100 hover:text-primary-700 dark:bg-primary-800 dark:border-primary-700 dark:text-primary-400 dark:hover:bg-primary-700 dark:hover:text-white"
        >
          Next
        </a>
      )
    }
  </li>
</ul>
