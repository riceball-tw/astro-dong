---
const {themeColor} = Astro.props
const cardBody = themeColor ? themeColor + 40 : ""
const cardBorder = themeColor ? themeColor + 40 : ""
---

  <div
    class=`transition bg-opacity-60 hover:bg-opacity-100 relative block bg-white rounded-lg border border-primary-200 dark:border-primary-500 card bg-primary-50 dark:bg-primary-800 hover:bg-primary-100 dark:hover:bg-primary-700 hover:border-primary-300 dark:hover:border-primary-600`
  > 
    <div class="card rounded-lg p-6">
        <slot />
    </div>
  </div>


<style define:vars={{ cardBody, cardBorder }}>
  .card:hover {
    background-color: var(--cardBody);
    border-color: var(--cardBorder);
  }
</style>