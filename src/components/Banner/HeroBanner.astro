---
const { title } = Astro.props;
---

<section
  class="grid p-8 grid-cols-1 md:grid-cols-2 items-center justify-between"
>
  <div>
    <h1 class="leading-normal md:leading-normal text-2xl md:text-3xl mb-24">
      {title}
    </h1>
    <slot name="cta" />
  </div>
  <div class="flex justify-center">
    <slot name="image" />
  </div>
</section>
