---
import Card from "@components/Card.astro";
const { post } = Astro.props;
---

<li>
  <Card>
    <article>
      <a href={"post/" + post.frontmatter.slug}>
        <h3 class="text-2xl mb-4">{post.frontmatter.titletc}</h3>
      </a>
      <p class="text-sm">{post.frontmatter.description}</p>
      <time class="mt-8 inline-block">
        {post.frontmatter.date}
      </time>
      <ul>
        {
          post.frontmatter.tag.map((tag, index) => (
            <li class="inline-block">
              {index ? <div class="inline-block">ï¼Ž</div> : ""}
              <a href="#">{tag}</a>
            </li>
          ))
        }
      </ul>
    </article>
  </Card>
</li>
