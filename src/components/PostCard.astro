---
import Card from "@components/Card.astro";
const { post } = Astro.props;
---

<li>
  <Card>
    <article>
      <a href={post.url}>
        {
          // Emoji
          post.frontmatter.emoji && (
            <div class="text-4xl absolute top-0 left-0 transform-gpu -translate-y-1/2 translate-x-1/2">
              {post.frontmatter.emoji}
            </div>
          )
        }
        <h3 class="text-2xl mb-4">{post.frontmatter.titletc}</h3>
      </a>
      <p class="text-sm">{post.frontmatter.description}</p>
      <time class="mt-8 inline-block">
        {post.frontmatter.date}
      </time>
      <!-- Category -->
      <ul>
        {
          post.frontmatter.category.map((tag, index) => (
            <li class="inline-block">
              {index ? <div class="inline-block">．</div> : ""}
              <a href={`/post/categories/${tag}`}>{tag}</a>
            </li>
          ))
        }
      </ul>
      <!-- Tag -->
      <ul>
        {
          post.frontmatter.tag.map((tag, index) => (
            <li class="inline-block">
              {index ? <div class="inline-block">．</div> : ""}
              <a href="#">{tag}</a>
            </li>
          ))
        }
      </ul>
    </article>
  </Card>
</li>
