---
import NavbarLink from "@components/NavbarLink.astro";
import { SITE_BRAND, SITE_NAV } from "@config";
import ButtonSearch from "./Button/ButtonSearch.astro";
---

<nav
  class="fixed bottom-0 left-0 flex items-center justify-between w-full sm:fixed sm:top-0 sm:bottom-auto z-50 filter md:backdrop-blur-none backdrop-blur-xl"
>
  <div class="grid grid-cols-3 md:grid-cols-2 w-full whitespace-nowrap">
    <!-- Brand -->
    <a class="flex items-center md:mx-8 mx-4" href="/">
      <h2>
        <img loading="lazy" class="dark:hidden" width="140" height="40" src="/images/me/webdongLogo.svg" alt="Dong Logo">
        <img loading="lazy" class="hidden dark:block" width="140" height="40" src="/images/me/webdongLogo-dark.svg" alt="Dong Logo Dark Version">
        <span class="sr-only">{SITE_BRAND}</span>
      </h2>
    </a>

    <!-- Navbar List -->
    <div class="md:col-span-1 col-span-2 font-medium">
      <ul class="flex text-center">
        {
          SITE_NAV.map((item) => (
            <NavbarLink href={item.url} item={item}>
              {item.name}
            </NavbarLink>
          ))
        }

        <li class="inline-block flex-1">
          <ButtonSearch />
        </li>
      </ul>
    </div>
  </div>
</nav>
