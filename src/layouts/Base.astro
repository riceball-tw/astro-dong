---
import Head from "@components/Head.astro";
import Navbar from "@components/Navbar.astro";
import Footer from "@components/Footer.astro";
import SearchModal from "@components/Modal/SearchModal.astro";
const { title, description, image } = Astro.props;
---

<!DOCTYPE html>
<html lang="zh-hant-tw" class="font-sans theme-toggle">
  <head>
    <slot name="head">
      <Head title={title} description={description} image={image} />
    </slot>
  </head>
  <body class="bg-default text-default dark:bg-[url('/images/hero-banner/site-gradient-dark.svg')] bg-[url('/images/hero-banner/site-gradient-light.svg')] bg-no-repeat bg-cover bg-center">
    <Navbar />
    <div class="min-h-screen">
      <slot />
    </div>
    <Footer />
    <SearchModal />
  </body>
</html>
