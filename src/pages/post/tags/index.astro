---
import Base from "@layouts/Base.astro";
import PageBanner from "@components/Banner/PageBanner.astro";
import Pill from "@components/Pill.astro";
import { queryFetch } from "@utils/queryFetch";
const tags = await queryFetch(`{
	tags{
    data{
      attributes{
        name
        slug
      }
    }
  }
}
`).then((result) => result.data.tags.data);

const title = "文章分類";
const description = "所有文章的大分類";
---

<Base>
  <PageBanner title={title} description={description} />
  <ul class="gap-2 mx-8 flex">
    {
      tags.map((tag) => (
        <li class="text-3xl">
            <Pill>
              <a href={`/post/tags/${tag.attributes.slug}`}>
                {tag.attributes.name}
              </a>
            </Pill>
        </li>
      ))
    }
  </ul>
</Base>
