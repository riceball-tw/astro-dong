---
import Base from "@layouts/Base.astro";
import Paginator from "@components/Paginator.astro";
import PostCard from "@components/PostCard.astro";
import PageBanner from "@components/Banner/PageBanner.astro";
export async function getStaticPaths({ paginate }) {
  const posts = await Astro.glob("./*.{md,mdx}");
  return paginate(posts, { pageSize: 20 });
}
const { page } = Astro.props;
const title = "所有文章";
const description = "紀錄觀點、設計開發資源與教學筆記東東。";
---

<Base title={title} description={description}>
  <PageBanner title={title} />

  <ul class="grid grid-cols-1 md:grid-cols-3 gap-4 mx-4">
    {page.data.map((post) => <PostCard post={post} />)}
  </ul>
  <Paginator page={page} />
</Base>
