---
import { SITE_DESCRIPTION } from "@config";
import Base from "@layouts/Base.astro"
const posts = await Astro.glob('../contents/posts/*.md')
---
<Base>
  <h1 class="text-4xl sm:text-6xl px-4 py-32">
    {SITE_DESCRIPTION}
  </h1>
  <section class="px-4">
    <div class="grid grid-cols-3">
      <div>
        <h2 class="text-3xl">
        近期文章
        </h2>
        <p class="text-xl">Lorem, ipsum dolor sit amet consectetur adipisicing elit. Adipisci in necessitatibus culpa quo aliquid, doloremque inventore animi nesciunt repudiandae, ea numquam! Ipsa expedita maiores eum optio nihil corporis quas architecto.</p>
      </div> 
      <div>
        <ul>
          <li>
            {posts.slice(0, 3).map(post => (
              <article>

                <h3>{post.frontmatter.title}    {posts.url}</h3>
                
              </article>
            ))}
          </li>
        </ul>
      </div>
    </div>
  </section>
</Base>


